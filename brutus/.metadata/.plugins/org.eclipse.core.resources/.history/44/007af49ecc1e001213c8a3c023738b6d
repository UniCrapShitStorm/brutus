package buildings;

import ground.Field;

public class BuildingsRaw extends Building {
	private Field place;
	private boolean needsStreet;
	private int initAttr;
	private int plusAttr;
	private int stepAttr;
	private int maxAttrRegion;
	private int maxWorkers;
	private int costs;

	public BuildingsRaw(String name, int sizeX, int sizeY, Field place, 
			boolean needsStreet, int initAttr, int plusAttr, int stepAttr,
			int maxAttrRegion, int maxWorkers, int costs) {
		super(name, sizeX, sizeY);
		this.place = place;
		this.needsStreet = needsStreet;
		this.initAttr = initAttr;
		this.plusAttr = plusAttr;
		this.stepAttr = stepAttr;
		this.maxAttrRegion = maxAttrRegion;
		this.maxWorkers = maxWorkers;
		this.costs = costs;
	}
	
	public BuildingsRaw(String name, int sizeX, int sizeY, Field place, 
			boolean needsStreet, int initAttr, int plusAttr, int stepAttr,
			int maxAttrRegion, int maxWorkers, int costs) {
		super(name, sizeX, sizeY);
		this.place = place;
		this.needsStreet = needsStreet;
		this.initAttr = initAttr;
		this.plusAttr = plusAttr;
		this.stepAttr = stepAttr;
		this.maxAttrRegion = maxAttrRegion;
		this.maxWorkers = maxWorkers;
		this.costs = costs;
	}

	/**
	 * liefert zurück, ob eine Straßenanbindung benötigt wird
	 * @return needsStreet Straßenanbindung benötigt?
	 */
	public boolean needsStreet() {
		return needsStreet;
	}

	/**
	 * liefert die initiale Attraktivität zurück
	 * @return initAttr initiale Attraktivität
	 */
	public int getInitAttr() {
		return initAttr;
	}

	/**
	 * liefert zurück, TODO
	 * @return needsStreet TODO
	 */
	public int getPlusAttr() {
		return plusAttr;
	}

	/**
	 * liefert zurück, TODO
	 * @return needsStreet TODO
	 */
	public int getStepAttr() {
		return stepAttr;
	}

	/**
	 * liefert zurück, TODO
	 * @return needsStreet TODO
	 */
	public int getMaxAttrRegion() {
		return maxAttrRegion;
	}

	/**
	 * liefert die maximale Anzahl der Arbeiter zurück
	 * @return maxWorkers maximale Anzahl der Arbeiter
	 */
	public int getMaxWorkers() {
		return maxWorkers;
	}

	/**
	 * liefert die Kosten des Gebäudes zurück
	 * @return costs Kosten des Gebäudes
	 */
	public int getCosts() {
		return costs;
	}
}

	public boolean isBurning() {
		return burning;
	}
	public int getMaxCivilians() {
		return MAX_CIVS;
	}
	public boolean setCivilianCount(int count) {
		if(count > MAX_CIVS)
			return false;
		else
		civilians = count;
		return true;
	}

	public int getWealth() {
		return WEALTH;
	}


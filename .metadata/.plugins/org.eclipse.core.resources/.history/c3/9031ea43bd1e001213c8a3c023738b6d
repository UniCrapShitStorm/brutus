package buildings;

public class Homes extends HomesRaw {	
	private int inhabitants;
	private boolean burning;
	
	Homes(HomesRaw h, int inhabitants) {
		super(h.getName(), h.getSizeX(), h.getSizeY(), h.getId(), h.getMaxInhabitants(), h.getWealth(), h.getNeeds());
		
		this.burning = false;
		this.inhabitants = inhabitants;
	}	

	public LargeCasa(Field place,int startCivilians) {
		super(place,startCivilians);
	}
	
	public boolean setCivilianCount(int count) {
		if(count > MAX_CIVS)
			return false;
		else
		civilians = count;
		return true;
	}
	
